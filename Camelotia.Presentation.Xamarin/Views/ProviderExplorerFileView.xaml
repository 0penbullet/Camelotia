<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveViewCell 
    x:TypeArguments="vm:FileModel"  
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Camelotia.Presentation.Xamarin.Views.ProviderExplorerFileView"
    xmlns:vm="clr-namespace:Camelotia.Services.Models;assembly=Camelotia.Services"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize">
    <ViewCell.View>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <iconize:IconImage
                x:Name="IconImage"
                Margin="14, 7"
                HeightRequest="35"
                IconColor="#6453B3"
                WidthRequest="35" />
            <StackLayout Margin="0, 7, 7, 7" Grid.Column="1">
                <Label x:Name="NameLabel" FontSize="16" />
                <Label x:Name="ModifiedLabel" />
                <Label x:Name="SizeLabel" FontAttributes="Bold"/>
            </StackLayout>
        </Grid>
    </ViewCell.View>
</rxui:ReactiveViewCell>